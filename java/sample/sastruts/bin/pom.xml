	<modelVersion>4.0.0</modelVersion>
	<groupId>gear</groupId>
	<artifactId>sastruts</artifactId>
	<packaging>war</packaging>
	<version>1.2.0-SNAPSHOT</version>
	<name>sastruts</name>
	<description>	
	</description>
	
	<parent>
		<groupId>gear</groupId>
