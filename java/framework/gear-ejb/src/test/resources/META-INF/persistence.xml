<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="mongo-example" transaction-type="RESOURCE_LOCAL">
	      <class>org.coder.gear.query.criteria.mongo.Order</class>
	      <class>org.coder.gear.query.criteria.mongo.OrderLine</class>
	      <class>org.coder.gear.query.criteria.mongo.Address</class>
	      <class>org.coder.gear.query.criteria.mongo.Customer</class>
       <class>org.coder.gear.query.criteria.mongo.Logger</class> 
	      <properties>
	          <property name="eclipselink.target-database" value="org.eclipse.persistence.nosql.adapters.mongo.MongoPlatform"/>
	          <property name="eclipselink.nosql.connection-spec" value="org.eclipse.persistence.nosql.adapters.mongo.MongoConnectionSpec"/>
	          <property name="eclipselink.nosql.property.mongo.port" value="20001"/>
	          <property name="eclipselink.nosql.property.mongo.host" value="localhost"/>
	          <property name="eclipselink.nosql.property.mongo.db" value="logdb"/>
	          <property name="eclipselink.logging.level" value="FINEST"/>
	      </properties>
	</persistence-unit>
</persistence>