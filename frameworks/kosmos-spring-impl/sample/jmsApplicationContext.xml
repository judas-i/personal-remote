<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:jms="http://www.springframework.org/schema/jms"
	xmlns:jee="http://www.springframework.org/schema/jee"		
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd
http://www.springframework.org/schema/aop
http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
http://www.springframework.org/schema/jee
http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
http://www.springframework.org/schema/util
http://www.springframework.org/schema/util/spring-util-3.0.xsd
http://www.springframework.org/schema/jms 
http://www.springframework.org/schema/jms/spring-jms-3.0.xsd">


	<context:annotation-config/>

  	<!-- 
  		コネクションファクトリ 　接続先の設定はミドルウェアのJNDIの設定時にコネクションプールに対して実施する。
  		glassfishであればaddressListプロパティにlocalhost:7676のように定義する
  		http://download.oracle.com/docs/cd/E19528-01/820-0846/gbnnp/index.html
  	-->
   	<jee:jndi-lookup id="jmsQueueConnectionFactory" jndi-name="javax/jms/QueueXAConnectionFactory" />	

    <!-- 配信先の取得 -->
    <bean id="jmsDestinationResolver" class="org.springframework.jms.support.destination.JndiDestinationResolver">
        <property name="cache" value="true"/>
    </bean>
    <bean id="defaultQueueDestination" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="jms/ObjectQueueJndiName"/>
    </bean>

  	<!-- Queue用テンプレート -->
    <bean id="jmsQueueTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="jmsQueueConnectionFactory"/>
        <property name="destinationResolver" ref="jmsDestinationResolver"/>
        <property name="defaultDestination" ref="defaultQueueDestination"/>
        <property name="receiveTimeout" value="20000"/>
        <property name="sessionTransacted" value="false"/>
    </bean>     
  
  	<!-- 配信先セレクタ -->
    <bean id="destinationSelecter" class="kosmos.framework.service.core.messaging.DestinationSelectorImpl" />

	<!-- Queue配信者 -->
	<bean id="queueProducer" class="kosmos.framework.service.core.messaging.MessageProducerImpl" scope="prototype">
		<!-- ><property name="destinationSelecter" ref="destinationSelecter"/> -->
		<property name="jmsTemplate" ref="jmsQueueTemplate"/>		
	</bean>
	
	<!-- リスナー定義 -->
	<bean id="messageListener" class="kosmos.framework.service.core.messaging.MessageListenerImpl" />
	
	<!-- 
		MQを別サーバにする場合、送信時と同じコネクションファクトリを使用すると同じMDPはこのサーバで動作する可能性がある。
	 -->
 	<jms:listener-container 
		acknowledge="transacted"
		connection-factory="jmsQueueConnectionFactory"
		destination-type="queue"		
		destination-resolver="jmsDestinationResolver"
		transaction-manager="transactionManager">
		<jms:listener destination="jms/ObjectQueueJndiName"  ref="messageListener"/>
	</jms:listener-container>

</beans>
