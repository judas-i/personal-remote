	<bean id="transactionAttributeSource" class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
	<bean id="txAdvice" class="alpha.domain.core.transaction.ContextControllableTransactionInterceptor" >
		<property name="transactionAttributeSource" ref="transactionAttributeSource"/>	
	</bean>
	<bean class="org.springframework.transaction.interceptor.TransactionAttributeSourceAdvisor">
		<property name="transactionInterceptor" ref="txAdvice"/>
	</bean>
	-->

	<!-- 内部クエリ -->
	<bean id="nativeGatewayTrace" class="org.coder.alpha.query.free.gateway.PersistenceGatewayTrace">
		<property name="delegate">
			<bean class="org.coder.alpha.query.free.gateway.NativeGateway" scope="prototype" >
				<property name="queryService">
					<bean class="org.coder.alpha.jdbc.service.impl.QueryServiceImpl" scope="singleton">
						<property name="exceptionHandler">
							<bean class="org.coder.alpha.query.free.NativeQueryExceptionHandler" scope="singleton"/>
						</property>
					</bean>
				</property>		
			</bean>
		</property>
	</bean>
	
	<!--　バッチクエリファクトリ -->
	<bean id="batchUpdateFactory" class="org.coder.alpha.query.free.BatchModifyQueryFactory" scope="prototype">
		<property name="persistenceGateway" ref="nativeGatewayTrace"/>	
	</bean>
	
	<!-- クエリファクトリ -->
	<bean id="queryFactory" class="org.coder.alpha.query.free.QueryFactory" scope="prototype">
		<property name="nativeGateway" ref="nativeGatewayTrace"/>			
	</bean>
	
	<!-- ORMクエリファクトリ -->
	<bean id="ormQueryFactory" class="org.coder.alpha.query.criteria.CriteriaQueryFactory" scope="prototype">	
		<property name="builderFactory">
			<bean class="org.coder.alpha.query.criteria.statement.SQLBuilderFactory" scope="singleton" />
		</property>
		<property name="persistenceGateway" ref="nativeGatewayTrace"/>
	</bean>
	
</beans>
